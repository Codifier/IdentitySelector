{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.2",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "identityselector@codifier.nl",
      "strict_min_version": "115.0"
    }
  },
  "permissions": [
    "accountsRead", "accountsIdentities", "messagesRead", "compose", "storage"
  ],
  "background": {
    "page": "/html/background.html"
  },
  "options_ui": {
    "page": "/html/options.html",
    "browser_style": false,
    "open_in_tab": false
  },
  "icons": {
    "16": "/html/img/icon-16.png",
    "32": "/html/img/icon-32.png",
    "48": "/html/img/icon-48.png",
    "64": "/html/img/icon-64.png",
    "96": "/html/img/icon-96.png",
    "128": "/html/img/icon-128.png",
    "256": "/html/img/icon-256.png",
    "512": "/html/img/icon-512.png"
  }
}
