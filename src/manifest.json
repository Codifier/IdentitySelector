{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.3.1",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "identityselector@codifier.nl",
      "strict_min_version": "115.0"
    }
  },
  "permissions": [
    "accountsRead",
    "accountsIdentities",
    "messagesRead",
    "compose",
    "compose.send",
    "storage"
  ],
  "background": {
    "page": "/html/background.html"
  },
  "options_ui": {
    "page": "/html/options.html",
    "browser_style": false,
    "open_in_tab": false
  },
  "compose_action": {
    "default_icon": "/html/img/icon.svg",
    "default_label": "",
    "browser_style": false
  },
  "icons": {
    "16": "/html/img/icon.svg",
    "32": "/html/img/icon.svg",
    "48": "/html/img/icon.svg",
    "64": "/html/img/icon.svg",
    "96": "/html/img/icon.svg",
    "128": "/html/img/icon.svg",
    "256": "/html/img/icon.svg",
    "512": "/html/img/icon.svg"
  }
}
