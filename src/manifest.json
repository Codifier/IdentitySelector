{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.1",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "identityselector@codifier.nl",
      "strict_min_version": "115.0"
    }
  },
  "permissions": [
    "accountsRead", "accountsIdentities", "messagesRead", "compose", "storage"
  ],
  "background": {
    "page": "/html/background.html"
  },
  "options_ui": {
    "page": "/html/options.html",
    "browser_style": false,
    "open_in_tab": false
  }
}
